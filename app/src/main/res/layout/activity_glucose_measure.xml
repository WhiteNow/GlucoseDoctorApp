<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".presentation.glucose_measure.GlucoseMeasureActivity">


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/activityTitle"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="40dp"
              android:textStyle="bold"
              android:textSize="30sp"
              android:textColor="@color/textColor"
              android:text="Control de glucosa"
              android:textAlignment="center"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/measureLbl"
              android:text="Nivel de glucosa"
              android:textSize="20dp"
              android:textStyle="bold"
              app:layout_constraintTop_toBottomOf="@id/activityTitle"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="24dp"
              android:layout_marginTop="40dp"
    />

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/glucoseText"
              android:layout_marginStart="24dp"
              android:layout_marginEnd="24dp"
              android:background="@drawable/edit_text_bg"
              android:layout_marginTop="10dp"
              android:padding="10dp"
              app:layout_constraintTop_toBottomOf="@id/measureLbl"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/levelLbl"
              android:text="Estado"
              android:textSize="20dp"
              android:textStyle="bold"
              app:layout_constraintTop_toBottomOf="@id/glucoseText"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="24dp"
              android:layout_marginTop="40dp"
    />

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/levelText"
              android:layout_marginStart="24dp"
              android:layout_marginEnd="24dp"
              android:background="@drawable/edit_text_bg"
              android:layout_marginTop="10dp"
              android:padding="10dp"
              app:layout_constraintTop_toBottomOf="@id/levelLbl"
    />

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/buttonDarkColor"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:text="Registrar"
            android:textStyle="bold"
            android:textColor="@color/textLightColor"
            app:layout_constraintTop_toBottomOf="@id/levelText"
    />

</android.support.constraint.ConstraintLayout>