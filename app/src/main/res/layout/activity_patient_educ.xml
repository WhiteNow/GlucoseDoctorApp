<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.patient_education.PatientEducActivity"
        android:background="@color/backgroundColor">

    <TextView
            android:id="@+id/title_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Educando al paciente"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="30sp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
    />

    <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:id="@+id/treatment_tab"
            app:tabTextColor="@color/textColor"
            app:tabIndicatorColor="@color/buttonDarkColor"
            app:layout_constraintTop_toBottomOf="@id/title_label"
            android:layout_marginTop="12dp"
    />

    <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintTop_toBottomOf="@id/treatment_tab"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>