<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.treatments.fragments.MedicineFragment">


    <TextView
            android:text="@string/medicamento_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:textSize="17sp"
            android:textColor="@color/textColor"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:id="@+id/medicine_title_id"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/medicine_spinner_id"
            app:layout_constraintTop_toTopOf="@id/medicine_title_id"
            app:layout_constraintStart_toEndOf="@id/medicine_title_id"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
    />
    <TextView
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="@string/descripcion_label"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_id" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/medicine_title_id" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text=""
            android:textColor="@color/black_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/description_txt_edit"
            android:padding="16dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/description_id"/>
</android.support.constraint.ConstraintLayout>