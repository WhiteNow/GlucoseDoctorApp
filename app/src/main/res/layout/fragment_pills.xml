<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".presentation.patient_education.fragments.PillsFragment">


        <TextView android:id="@+id/q2_lbl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Metformina"
                  android:textSize="16dp"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="12dp"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
        />

        <TextView android:id="@+id/answer2_lbl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/q2_lbl"
                  android:textSize="18sp"
                  android:layout_marginTop="6dp"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
                  android:textColor="#000"
                  android:text="El principal efecto de la metformina es disminuir la producción de glucosa hepática mediante la inhibición de la gluconeogénesis; se considera el medicamento de elección inicial para la hiperglucemia en la diabetes tipo 2."
                  android:layout_marginBottom="20dp"
        />
        <TextView android:id="@+id/q3_lbl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Estatinas"
                  android:textSize="16dp"
                  app:layout_constraintTop_toBottomOf="@id/answer2_lbl"
                  android:layout_marginTop="1dp"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
        />

        <TextView android:id="@+id/answer3_lbl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/q3_lbl"
                  android:textSize="18sp"
                  android:layout_marginTop="6dp"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
                  android:textColor="#000"
                  android:text="Estos agentes son inhibidores competitivos de la hidroximetilglutaril (HMG) CoA reductasa, el paso limitante en la biosíntesis del colesterol; se utilizan para el control de hipertrigliceridemia, en pacientes con DM2,  es frecuente encontrar los valores de colesterol elevados."
                  android:layout_marginBottom="20dp"
        />

        <TextView android:id="@+id/q4_lbl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Fibratos"
                  android:textSize="16dp"
                  app:layout_constraintTop_toBottomOf="@id/answer3_lbl"
                  android:layout_marginTop="1dp"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
        />

        <TextView android:id="@+id/answer4_lbl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/q4_lbl"
                  android:textSize="18sp"
                  android:layout_marginTop="6dp"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
                  android:textColor="#000"
                  android:text="Agente antilipémico, se utilizan para el control de hipertrigliceridemia, en pacientes con DM2 ,  es frecuente encontrar los valores de colesterol elevados."
        />

        <TextView android:id="@+id/q5_lbl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Captopril"
                  android:textSize="16dp"
                  app:layout_constraintTop_toBottomOf="@id/answer4_lbl"
                  android:layout_marginTop="1dp"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
        />

        <TextView android:id="@+id/answer5_lbl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/q5_lbl"
                  android:textSize="18sp"
                  android:layout_marginTop="6dp"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
                  android:textColor="#000"
                  android:text="Inhibidor de la enzima convertidora de angiotensina (ECA); Antihipertensivo; se utiliza para el control de la presión arterial."
        />

        <TextView android:id="@+id/q6_lbl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Losartan"
                  android:textSize="16dp"
                  app:layout_constraintTop_toBottomOf="@id/answer5_lbl"
                  android:layout_marginTop="1dp"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
        />

        <TextView android:id="@+id/answer6_lbl"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@id/q6_lbl"
                  android:textSize="18sp"
                  android:layout_marginTop="6dp"
                  android:layout_marginStart="30dp"
                  android:layout_marginEnd="30dp"
                  android:textColor="#000"
                  android:text="Bloqueador del receptor de angiotensina II; Antihipertensivo; se utiliza para el control de la presión arterial."
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginBottom="20dp"
        />

    </android.support.constraint.ConstraintLayout>



</android.support.v4.widget.NestedScrollView>